<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imagePaysHori"
        android:layout_width="125dp"
        android:layout_height="113dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp"
        tools:srcCompat="@drawable/fr" />

    <ImageButton
        android:id="@+id/buttonFavHori"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_favorite_24"
        tools:layout_editor_absoluteX="44dp" />

    <ImageButton
        android:id="@+id/addPaysHori"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/add_playlist"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/nomPaysHori"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:text="PAYS"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="120dp" />

</androidx.constraintlayout.widget.ConstraintLayout>