<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nomPaysVerti"
        android:layout_width="253dp"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="PAYS"
        app:layout_constraintStart_toEndOf="@+id/imagePaysVerti"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descPaysVerti"
        android:layout_width="246dp"
        android:layout_height="27dp"
        android:layout_marginStart="12dp"
        android:text="Description"
        app:layout_constraintStart_toEndOf="@+id/imagePaysVerti"
        app:layout_constraintTop_toBottomOf="@+id/nomPaysVerti" />

    <ImageView
        android:id="@+id/imagePaysVerti"
        android:layout_width="78dp"
        android:layout_height="79dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/favVerti"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_favorite_24" />

    <ImageButton
        android:id="@+id/AddPaysVerti"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favVerti"
        app:srcCompat="@drawable/add_playlist" />

</androidx.constraintlayout.widget.ConstraintLayout>