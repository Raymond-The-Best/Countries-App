<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/DescDrapeauPays"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/fr" />

    <TextView
        android:id="@+id/NomPays"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:text="Pays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DescDrapeauPays"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/Continent"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Continent"
        app:layout_constraintStart_toEndOf="@+id/DescDrapeauPays"
        app:layout_constraintTop_toBottomOf="@+id/Capitale" />

    <TextView
        android:id="@+id/Capitale"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Capitale"
        app:layout_constraintStart_toEndOf="@+id/DescDrapeauPays"
        app:layout_constraintTop_toBottomOf="@+id/NomPays" />

    <TextView
        android:id="@+id/titreInfos"
        android:layout_width="404dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="15dp"
        android:text="INFORMATIONS SUPPLÉMENTAIRES"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollviewpays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/infos_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/subregionlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Région"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Région :" />

                <TextView
                    android:id="@+id/infregion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="europe" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idpdlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Idpd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pays indépendant :" />

                <TextView
                    android:id="@+id/infidpd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OUI" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/unlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/menberun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Membre des Nations Unies :" />

                <TextView
                    android:id="@+id/infmemberun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OUI" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/monnaielay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Monnaie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Monnaie : " />

                <TextView
                    android:id="@+id/infmonnaie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Euros" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/languelay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/langue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Langue : " />

                <TextView
                    android:id="@+id/inflangue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="français" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/denolay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Denomination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dénomination :" />

                <TextView
                    android:id="@+id/infdeno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Français, Française" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/poplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/population"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Population : " />

                <TextView
                    android:id="@+id/infpop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6 millions" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/conduitelay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Conduite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Conduite : " />

                <TextView
                    android:id="@+id/infconduite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Droite" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/titreMap"
        android:layout_width="404dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="310dp"
        android:text="CARTE"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <org.osmdroid.views.MapView
        android:id="@+id/DescMapPays"
        android:layout_width="396dp"
        android:layout_height="298dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="4dp"
        app:guidelineUseRtl="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollviewpays"
        app:layout_constraintVertical_bias="0.979" />



</androidx.constraintlayout.widget.ConstraintLayout>