<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="405dp"
        android:layout_height="232dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/DescDrapeauPays"
        android:layout_width="200dp"
        android:layout_height="125dp"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="145dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/DescNomPays"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginStart="200dp"
        android:text="NOM PAYS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="241dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/DescMapPays"
        android:layout_width="401dp"
        android:layout_height="252dp"
        app:guidelineUseRtl="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titreInfos"
        android:layout_width="404dp"
        android:layout_height="36dp"
        android:text="INFORMATIONS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="280dp" />

    <TextView
        android:id="@+id/DescTextPays"
        android:layout_width="411dp"
        android:layout_height="151dp"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/DescMapPays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreInfos" />

</androidx.constraintlayout.widget.ConstraintLayout>