<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addPaysVerti"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nomPaysVerti"
        android:layout_width="253dp"
        android:layout_height="22dp"
        android:text="PAYS"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/descPaysVerti"
        android:layout_width="254dp"
        android:layout_height="55dp"
        android:text="Description"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="42dp" />

    <ImageView
        android:id="@+id/imagePaysVerti"
        android:layout_width="78dp"
        android:layout_height="79dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/avatars" />


    <ImageButton
        android:id="@+id/favVerti"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/outline_favorite_24"
        tools:layout_editor_absoluteX="359dp"
        tools:layout_editor_absoluteY="14dp" />

    <ImageButton
        android:id="@+id/AddPaysVerti"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/add_playlist"
        tools:layout_editor_absoluteX="359dp"
        tools:layout_editor_absoluteY="52dp" />

</androidx.constraintlayout.widget.ConstraintLayout>