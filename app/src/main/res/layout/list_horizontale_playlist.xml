<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ImagePlaylistHori"
        android:layout_width="118dp"
        android:layout_height="112dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/addPlaylistHori"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="92dp"
        tools:srcCompat="@drawable/add_playlist" />

    <TextView
        android:id="@+id/NomPlaylistHori"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:text="NOM PLAYLIST"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="120dp" />

    <ImageButton
        android:id="@+id/DeletePlaylistHori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        app:srcCompat="@drawable/supprimer"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="144dp" />

</androidx.constraintlayout.widget.ConstraintLayout>